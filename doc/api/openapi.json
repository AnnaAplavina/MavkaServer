  "paths": {
    "/auth/registration": {
      "post": {
        "summary": "User registration endpoint",
        "description": "This method adds a new user to the database",
        "operationId": "authRegister",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "pass": {
                    "type": "string"
                  },
                  "first_name": {
                    "type": "string"
                  },
                  "last_name": {
                    "type": "string"
                  }
                },
                "required": [
                  "username",
                  "email",
                  "pass",
                  "first_name",
                  "last_name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful registration",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "User registered"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body or missing fields",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string"
                          },
                          "msg": {
                            "type": "string"
                          },
                          "path": {
                            "type": "string"
                          },
                          "location": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "example": {
                    "message": "Registration error",
                    "errors": [
                      {
                        "type": "field",
                        "msg": "Password can not be empty",
                        "path": "pass",
                        "location": "body"
                      },
                      {
                        "type": "field",
                        "msg": "Password length is incorrect - must be 4 to 64 symbols",
                        "path": "pass",
                        "location": "body"
                      }
                    ]
                  }
                }
              }
            }
          },
          "409": {
            "description": "Username or email is already used",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "The username is already used"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Server error"
                  }
                }
              }
            }
          }
        }
      }
    },
